@model hackaton.Models.Ruta

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Ruta</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Nombre)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nombre)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Origen_Nombre)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Origen_Nombre)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Destino_Nombre)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Destino_Nombre)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.FrecuenciaMin)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FrecuenciaMin)
    </div>



    <div class="container"  role="dialog">
            <div class="row centered-form">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        	    <div class="panel panel-default">
        		    <div class="panel-heading">
			    		    <h3 class="panel-title">Ruta - @Model.Nombre</h3>
			 			    </div>
			 			    <div class="panel-body">
			    		    <form role="form">

			    			    <div class="row ubicacion">
			    				   
			    				   
			    				    <div class="col-xs-6 col-sm-6 col-md-6">
			    					    <div class="form-group">
                                            Origen: @Model.Origen_Nombre
                                        </div>
			    				    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
			    					    <div class="form-group">
			    						     Destino: @Model.Destino_Nombre
                                        </div>
			    				    </div>
			    			    </div>

			    			    <div class="row">

                                    <div id="mapParadas" style="width:100%;height:500px"></div>
			    			    </div>


                                <div class="row">
                                    <input type="hidden" id="mapa-values" />
                                    <div class="col-xs-2 col-sm-2 col-md-2">
			    					    <div class="form-group">
			    						    <a href="#" scope="" class="cerrar-mapa btn btn-info" > Aceptar</a>
			    					    </div>
			    			    </div>
			    			
			    			    
			    		
			    		    </form>
			    	    </div>
	    		    </div>
    		    </div>
    	    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")



    <script>
        initMapParadas();
    </script>
</p>
